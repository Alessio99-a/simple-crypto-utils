{
  "name": "cripto-utils",
  "version": "1.0.0",
  "description": "A TypeScript cryptography utility library for educational purposes only. Not intended for production use.",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./crypto": {
      "import": "./dist/crypto/index.mjs",
      "require": "./dist/crypto/index.cjs"
    },
    "./hash": {
      "import": "./dist/hash/index.mjs",
      "require": "./dist/hash/index.cjs"
    },
    "./otp": {
      "import": "./dist/otp/index.mjs",
      "require": "./dist/otp/index.cjs"
    },
    "./password": {
      "import": "./dist/password/index.mjs",
      "require": "./dist/password/index.cjs"
    },
    "./signature": {
      "import": "./dist/signature/index.mjs",
      "require": "./dist/signature/index.cjs"
    },
    "./uuid": {
      "import": "./dist/signature/index.mjs",
      "require": "./dist/signature/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "keywords": [
    "crypto",
    "cryptography",
    "password",
    "hash",
    "otp",
    "security",
    "typescript"
  ],
  "author": "Alessio Galtelli <alessiogaltelli@yahoo.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Alessio99-a/simple-crypto-utils.git"
  },
  "bugs": {
    "url": "https://github.com/Alessio99-a/simple-crypto-utils.git/issues"
  },
  "homepage": "https://github.com/Alessio99-a/simple-crypto-utils.git#readme",
  "dependencies": {
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
